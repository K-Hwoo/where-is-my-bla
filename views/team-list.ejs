<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("includes/head.ejs") %>
    <link rel="stylesheet" href="/styles/team-list.css" />
  </head>
  <body>
    <%- include("includes/header.ejs") %>

    <main>
      <section id="team-list-bar">
        <a href="/buildteam" id="to-go-build">Build a TEAM</a>
        <form action="/search" method="GET">
          <input id="search-input" type="text" />
        </form>
        <button id="order-oldest">Oldest</button>
      </section>

      <section id="all-posts">
        <h1>All Teams Recruiting Members</h1>
        <% if (!posts || posts.length === 0) { %>
        <p>No teams found - maybe start building some?</p>
        <a class="btn" href="/buildteam">Create a new Team</a>
        <% } else { %>
        <ol id="posts-list">
          <% for (const post of posts) { %>
          <li class="post-item">
            <h2><a href="/post/<%= post._id %>"><%= post.title %></a></h2>
            <p><%= post.summary %></p>
            <p class="post-item-author">By <%= post.who.nickname %></p>
            <div class="post-actions">
              <span
                >Members: <%= post.members.length %> / <%= post.memNum %></span
              >
            </div>
          </li>
          <% } %>
        </ol>
        <% } %>
      </section>
    </main>
  </body>
</html>
