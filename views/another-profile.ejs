<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("includes/head.ejs") %>
    <link rel="stylesheet" href="/styles/profile.css" />
  </head>
  <body>
    <%- include("includes/header.ejs") %>

    <main>
      <section id="profile">
        <div id="photo">
          <img src="../<%= AnotherUserData.imagePath %>" alt="my-photo" />
        </div>

        <div id="profile-describe">
          <p id="profile-name"><%= AnotherUserData.nickname %></p>
          <p id="profile-summary"><%= AnotherUserData.summary %></p>
          <p id="profile-location">
            Location : <%= AnotherUserData.location %>
          </p>
          <p id="profile-politics">
            Politics : <%= AnotherUserData.politics %>
          </p>
          <p id="profile-current-team">
            현재 <strong><%= howManyTeams %></strong> 팀 참여 중!
          </p>
        </div>
      </section>

      <section>
        <ol id="current-team">
          <% for (const AnotherUserjoinTeam of AnotherUserjoinTeams) { %>
          <li>
            <article class="current-team-element-joined">
              <a
                href="/post/<%= AnotherUserjoinTeam._id %>"
                class="my-team-name"
              >
                <h2 class="my-team-name">
                  <%= AnotherUserjoinTeam.title %>
                </h2></a
              >
              <p class="my-team-summary"><%= AnotherUserjoinTeam.summary %></p>
            </article>
          </li>
          <% } %> <% for (const AnotherUserOwnPost of AnotherUserOwnPosts) { %>
          <li>
            <article class="current-team-element-own">
              <a
                href="/post/<%= AnotherUserOwnPost._id %>"
                class="my-team-name"
              >
                <h2 class="my-team-name"><%= AnotherUserOwnPost.title %></h2></a
              >
              <p class="my-team-summary"><%= AnotherUserOwnPost.summary %></p>
            </article>
          </li>
          <% } %>
        </ol>
      </section>
    </main>
  </body>
</html>
